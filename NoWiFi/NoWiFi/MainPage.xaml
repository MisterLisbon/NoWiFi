<Page
    x:Class="NoWiFi.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NoWiFi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBox x:Name="txtProfile" HorizontalAlignment="Center" Margin="0,35,0,0" Text="TextBox" VerticalAlignment="Top" Width="210" IsReadOnly="True"/>
        <Button x:Name="btStartStop" Content="Start" HorizontalAlignment="Center" Margin="0,103,0,0" VerticalAlignment="Top" Click="BtStartStop_Click"/>
        <TextBlock x:Name="txtStatus" HorizontalAlignment="Center" Margin="0,158,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Page>
